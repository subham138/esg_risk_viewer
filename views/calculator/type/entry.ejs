<%- include('../../templates/header.ejs') %>
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3><%= sub_header %></h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="<%= header_url %>"><%= header %></a></li>
                    <li class="breadcrumb-item"><%= sub_header %></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
            <div class="card-body">
                <form method="POST" action="/cal_type_edit" class="needs-validation">
                <div class="row g-3 py-3">
                    <div class="col-md-6">
                        <label class="form-label" for="type_name">Name</label>
                        <input class="form-control" id="type_name" name="type_name" type="text" value="<%= id > 0 ? (data.length > 0 ? data[0].type_name : '') : '' %>" required="">
                        <div class="valid-feedback">No Error</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="type">Type</label>
                        <input class="form-control" id="type" name="type" type="text" value="<%= id > 0 ? (data.length > 0 ? data[0].type : '') : '' %>" required="">
                        <div class="valid-feedback">No Error</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="scope">Scope</label>
                        <select class="form-select" id="scope" name="scope" required="">
                            <option selected="" value="">Select One</option>
                            <option <%= id > 0 ? (data.length > 0 ? (data[0].scope == 1 ? 'selected' : '') : '') : '' %> value="1">Scope 1</option>
                            <option <%= id > 0 ? (data.length > 0 ? (data[0].scope == 2 ? 'selected' : '') : '') : '' %> value="2">Scope 2</option>
                            <option <%= id > 0 ? (data.length > 0 ? (data[0].scope == 3 ? 'selected' : '') : '') : '' %> value="3">Scope 3</option>
                        </select>
                    </div>
                </div>
                <input type="hidden" name="id" value="<%= id > 0 ? id : 0 %>">
                <button class="btn btn-pill btn-outline-primary btn-air-primary" type="submit">Submit</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../templates/footer.ejs') %>