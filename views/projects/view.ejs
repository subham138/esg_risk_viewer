<%- include('../templates/header.ejs') %>
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3><%= header %></h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><%= header %></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Zero Configuration  Starts-->
        <div class="col-sm-12">
            <% if(message){ %>
                <div class="alert alert-<%= message.type %> dark alert-dismissible fade show" role="alert">
                  <i data-feather="clock"></i>
                  <p><%= message.message %></p>
                  <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <div class="card">
                <div class="card-body card_body_Cus">
                    <div class="row py-3">

                        <div class="top_radio_sec">
                        <% if(user_type == 'A' || user_type == 'C' || user_type == 'S'){ %>
                        <div class="col-md-12">
                            <a href="/my_project_add?flag=<%= enc_dt %>" class="btn btn-pill btn-custom float-end" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Edit" id="my_project_add" data-step="1">Add New Project</a>
                        </div>
                        <% } %>
                        </div>

                    </div>
                    <!-- <div class="table-responsive"> -->
                        <table class="display" id="basic-1">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Last Accessed</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(project_data.msg.length > 0){
                                    let i = 1;
                                    project_data.msg.forEach(dt => { %>
                                <tr>
                                    <td><%= i %></td>
                                    <td><%= dt.project_name %></td>
                                    <td><%= dt.last_access != '' ? dateFormat(dt.last_access, 'dd/mm/yyyy HH:MM:ss') : '' %></td>
                                    <td <% if(i == 1){ %> id="my_project_td" <% } %>>
                                        <% if(user_type == 'A' || user_type == 'C' || user_type == 'S'){ %>
                                            <a href="/my_project_add?id=<%= dt.id %>&flag=<%= enc_dt %>" class="btn btn_UR btn-outline-primary btn-air-primary m-r-15" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Edit">
                                                <i class="icofont icofont-ui-edit"></i> Edit
                                            </a>
                                        <% }%>
                                        <a class="btn btn_UR btn-outline-primary btn-air-primary" onclick="redirectToPage('<%= dt.id %>', '<%= dt.sec_id > 0 ? dt.sec_id : 0 %>', '<%= dt.ind_id > 0 ? dt.ind_id : 0 %>', '<%= dt.project_name %>')">
                                            <% if(user_type != 'V'){ %> 
                                                <i class="icofont icofont-ui-settings"></i> Manage 
                                            <% }else{ %>
                                                <i class="icofont icofont-eye-alt"></i> View 
                                            <% } %>
                                        </a>
                                    <!-- <a href="" class="btn btn-pill btn-outline-danger btn-air-danger" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Delete">
                                        <i class="icofont icofont-ui-delete"></i> Delete
                                    </a> -->
                                    </td>
                                </tr>
                                <% i++; })}else{ %>
                                <tr>
                                    <td class="text-center text-danger" colspan="4">No Data Found</td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    <!-- </div> -->
                </div>
            </div>
        </div>
        <!-- Zero Configuration  Ends-->
    </div>
</div>
<script>
    function redirectToPage(id, sec_id, ind_id, proj_name){
        if(sec_id > 0 && ind_id > 0){
            window.location.href = `/project_report_view?enc_data=${window.btoa(JSON.stringify({sec_id:sec_id, ind_id:ind_id, top_id:0, proj_id:id, proj_name: proj_name, repo_type: '<%= flag == "I" ? "ifrs" : (flag == "E" ? "esrs" : (flag == "G" ? "gri" : "gri-f")) %>', flag:'<%= flag %>'}))}`
            // window.location.href = `/proj_work_view?dt=${window.btoa(JSON.stringify({proj_id: id, sec_id: sec_id, ind_id: ind_id, flag: '<%= flag %>'}))}`
        }else{
            window.location.href = `/proj_work?id=${id}&flag=<%= enc_dt %>`
        }
    }
    $(document).ready(function(){
        var element = [document.querySelector('#my_project_add'), document.querySelector('#my_project_td')],
        text = [`Create a new project under any reporting framework.`, `“Edit” allows you to change project name, assign new users or delete existing users for this project. “Manage” allows you to manage this project. “View” allows you to preview and download the project report.`]
        setTimeout(() => {
            triggerTour(element, text)
        }, 200);
    })
</script>
<%- include('../templates/footer.ejs') %>