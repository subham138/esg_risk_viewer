<%- include('../templates/header.ejs') %>
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3><%= header %></h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><%= header %></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Zero Configuration  Starts-->
        <div class="col-sm-12">
            <% if(message){ %>
                <div class="alert alert-<%= message.type %> dark alert-dismissible fade show" role="alert">
                  <i data-feather="clock"></i>
                  <p><%= message.message %></p>
                  <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <div class="card">
                <div class="card-body">
                    <div class="row py-3">
                        <% if(user_type == 'A' || user_type == 'C' || user_type == 'S'){ %>
                        <div class="col-md-12">
                            <a href="/my_project_add" class="btn btn-pill btn-outline-primary btn-air-primary float-end" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Edit">Add New Project</a>
                        </div>
                        <% } %>
                    </div>
                    <div class="table-responsive">
                        <table class="display" id="basic-1">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Last Accessed</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(project_data.msg.length > 0){
                                    let i = 1;
                                    project_data.msg.forEach(dt => { %>
                                <tr>
                                    <td><%= i %></td>
                                    <td><%= dt.project_name %></td>
                                    <td><%= dt.last_access %></td>
                                    <td>
                                        <% if(user_type == 'A' || user_type == 'C' || user_type == 'S'){ %>
                                            <a href="/my_project_add?id=<%= dt.id %>" class="btn btn-pill btn-outline-primary btn-air-primary" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Edit">
                                                <i class="icofont icofont-ui-edit"></i> Edit
                                            </a>
                                        <% }%>
                                        <a class="btn btn-pill btn-outline-primary btn-air-primary" onclick="redirectToPage(<%= dt.id %>, <%= dt.sec_id > 0 ? dt.sec_id : null %>, <%= dt.ind_id > 0 ? dt.ind_id : null %>, '<%= dt.business_act %>')">
                                            <% if(user_type != 'V'){ %> 
                                                <i class="icofont icofont-ui-settings"></i> Manage 
                                            <% }else{ %>
                                                <i class="icofont icofont-eye-alt"></i> View 
                                            <% } %>
                                        </a>
                                    <!-- <a href="" class="btn btn-pill btn-outline-danger btn-air-danger" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Delete">
                                        <i class="icofont icofont-ui-delete"></i> Delete
                                    </a> -->
                                    </td>
                                </tr>
                                <% i++; })}else{ %>
                                <tr>
                                    <td class="text-center text-danger" colspan="4">No Data Found</td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Zero Configuration  Ends-->
    </div>
</div>
<script>
    function redirectToPage(id, sec_id, ind_id, bus_act){
        if(sec_id && ind_id && bus_act){
            window.location.href = `/proj_work_view?dt=${window.btoa(JSON.stringify({proj_id: id, sec_id: sec_id, ind_id: ind_id}))}`
        }else{
            window.location.href = `/proj_work?id=${id}`
        }
    }
</script>
<%- include('../templates/footer.ejs') %>