<%- include('../templates/login_header.ejs') %>
    <style>
        .show-hide span {
            font-size: 20px !important;
        }
    </style>
    <div class="page-wrapper">
        <div class="sing-up-section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="navbar-brand-logo">
                            <a href="#"><img src="latest/img/logo.svg" alt=""></a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="sing-up-form">
                            <div class="sing-up-form-card">
                                <div class="sing-up-form-title">
                                    <h2>Sign in to your account</h2>
                                </div>
                                <form class="theme-form login-form" id="loginForm" action="/login" method="POST">
                                    <% if(message){ %>
                                        <div class="alert alert-<%= message.type %>">
                                            <%= message.message %>
                                        </div>
                                        <% } %>
                                            <div class="mb-3">
                                                <label for="logEmail" class="form-label">Email*</label>
                                                <input type="email" class="form-control" id="logEmail" name="email"
                                                    placeholder="Enter your email" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="logPass" class="form-label">Password*</label>
                                                <input id="logPass" type="password" class="form-control" name="password"
                                                    placeholder="Enter your password" required>
                                                <span toggle="#logPass"
                                                    class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                            </div>


                                            <div class="remember-row">
                                                <!-- <div class="form-check">
                                                    <input class="form-check-input" name="rem_me" id="rem_me_val"
                                                        type="checkbox" id="flexCheckDefault">
                                                    <label class="form-check-label" for="flexCheckDefault">
                                                        Remember me
                                                    </label>
                                                </div> -->
                                                <a href="/forgot_pass">Forgot password?</a>
                                            </div>

                                            <button class="btn btn-primary sign-up-button lginBtn" id="signInBtn"
                                                type="button">Sign in</button>
                                            <div class="divider">Or</div>
                                            <div class="social-card">
                                                <a onclick="signInWithGoogle()"><img src="latest/img/social-icon.svg"
                                                        alt="">Continue with
                                                    Google</a>
                                                <a onclick="signInWithMicrosoft()"><img src="latest/img/microsoft.svg"
                                                        alt="">Continue with
                                                    Microsoft</a>
                                            </div>

                                </form>
                            </div>
                            <div class="signup-content">
                                <h3>Don't have an account? <a href="/register">Sign Up</a></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="footer">
                            <ul>
                                <li>© ESG Risk Viewer</li>
                                <li class="divider-gray">|</li>
                                <li><a href="#">Privacy & Terms</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-default" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content"
                style="border-radius: 24px; border: none; box-shadow: 0 20px 40px rgba(0,0,0,0.1);">
                <div class="modal-body p-5">
                    <div class="text-center mb-4">
                        <div class="otp-icon-wrapper mb-3"
                            style="width: 80px; height: 80px; background: #f3e5f5; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                            <i class="fa fa-envelope-o" style="font-size: 32px; color: #7b1fa2;"></i>
                        </div>
                        <h3 style="font-weight: 700; color: #333;">Security Check</h3>
                        <p class="text-muted" style="font-size: 15px; line-height: 1.6;">
                            We have sent a 6-digit access code to your email.<br>
                            Please enter it below to verify your identity.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-12 d-flex justify-content-center">
                            <input type="text" class="form-control-lg" id="pincode-input1">
                        </div>
                    </div>

                    <div id="pinErr" class="text-center mt-2"></div>
                    <input type="hidden" id="pin">

                    <div class="text-center mt-4 pt-2">
                        <p style="font-size: 14px; color: #666;">
                            Didn’t receive the code?
                            <a href="javascript:void(0)" id="resend_otp"
                                style="color: #7b1fa2; font-weight: 600; text-decoration: none; border-bottom: 2px solid transparent; transition: all 0.3s;">
                                Resend Now
                            </a>
                        </p>
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-pill w-100" id="modalLoginBtn" type="button"
                            style="display: none; background: linear-gradient(135deg, #7b1fa2 0%, #4a148c 100%); color: white; padding: 12px; border-radius: 12px; font-weight: 600; border: none; box-shadow: 0 4px 15px rgba(123, 31, 162, 0.3);">
                            Verify & Sign In
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="latest/js/jquery-3.7.1.js"></script>
    <script src="latest/js/bootstrap.bundle.min.js"></script>

    <script>
        $(".toggle-password").click(function () {

            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });

        $(document).on("keypress", function (e) {
            if (e.which == 13) {
                $('#signInBtn').click()
            }
        });
    </script>

