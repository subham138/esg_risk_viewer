   function addNewCard() {
    var tot_card = $('.entry-card').length;
    $('#add-card').append(`
        <div class="card w-75 entry-card my-3 position-relative" id="card-${tot_card + 1}">
            <div class="card-body b-l-success border-3">
                <h4 class="mb-3">Child</h4>
                <div class="row">
                    <div class="col-md-4">
                        <select class="form-select" id="scopes_id_${tot_card + 1}" name="scopes_id" required>
