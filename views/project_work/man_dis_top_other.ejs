    function handleEditorChange(editorId, id, top_id) {
        // Clear the previous timeout if any
        if (saveTimeout) {
            clearTimeout(saveTimeout);
        }

        // Set the active editor
        activeEditor = editorId;

        // Set a timeout to auto-save after the specified interval
        saveTimeout = setTimeout(() => {
            saveEditorContent(editorId, id, top_id);
        }, saveInterval);
    }

