                //         if($(item).attr('data-id') == selVal){
                //             console.log('HERE');
                //             $(item).show()
                //         }
                //     })
                // })
            })
        }else{
            var topicId = $(this).attr('dt-set-id')
            $.ajax({
                method:'POST',
