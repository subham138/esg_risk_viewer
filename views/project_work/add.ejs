<%- include('../templates/header.ejs') %>
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3><%= sub_header %></h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="<%= header_url %>"><%= header %></a></li>
                    <li class="breadcrumb-item"><%= sub_header %></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
            <div class="card-body">
                <form method="POST" action="/save_proj_work" class="needs-validation" novalidate="">
                    <div class="row g-3 py-3">
                        <div class="col-md-12 text-center mb-4">
                            <p class="f-14">You are working on the project, <%= proj_name %></p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="sec_id">Section</label>
                            <select class="form-select" id="sec_id" name="sec_id" required="">
                                <option selected="" value="">Select Section</option>
                                <% if(sec_data.msg.length > 0){
                                    sec_data.msg.forEach(dt => { 
                                        var selected = '';
                                        if(id > 0) 
                                            if(dt.id == busi_data.msg[0].sec_id) selected = 'selected'; %>
                                        <option value="<%= dt.id %>" <%= selected %>><%= dt.sec_name %></option>
                                    <% })
                                } %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="ind_id">Industrie</label>
                            <select class="form-select" id="ind_id" name="ind_id" required="">
                                <option selected="" value="">Select Industrie</option>
                            </select>
                        </div>
                        <div class="col-md-12 select2-drpdwn mb-2">
                        <label class="form-label" for="bus_id">Business Activities</label>
                        <select id="bus_id" name="bus_id" class="js-example-basic-multiple col-sm-12" multiple="multiple">
                            <option value="">Select Business Activities</option>
                        </select>
                        </div>
                        <div class="col-md-12 select2-drpdwn mb-2">
                            <label class="form-label" for="location_id">Locations of Business Activities</label>
                            <select id="location_id" name="location_id" class="js-example-basic-multiple col-sm-12" multiple="multiple">
                                <option value="">Select Location</option>
                                <% if(loc_list.msg.length > 0){
                                        loc_list.msg.forEach(dt => { 
                                            var selected = '';
                                            if(id > 0) 
                                                if(dt.id == busi_data.msg[0].sec_id) selected = 'selected'; %>
                                            <option value="<%= dt.id %>" <%= selected %>><%= dt.location_name %></option>
                                        <% })
                                    } %>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" name="id" value="<%= id > 0 ? id : 0 %>">
                    <input type="hidden" name="proj_id" value="<%= proj_id > 0 ? proj_id : 0 %>">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#sec_id').on('change', function (){
        $.ajax({
            method:'GET',
            url: '/get_ind_list_ajax',
            data: {sec_id: $(this).val()},
            dataType: 'html',
            beforeSend: function(){
                $('.loader-wrapper').show()
            },
            success: function(result){
                var res = JSON.parse(result);
                console.log(res);
                $('#ind_id').empty();
                $('#ind_id').append($('<option>', {value: '', text: 'Select Industries'}));
                if(res.suc > 0 && res.msg.length > 0)
                    $.each(res.msg, function (i, item) {
                        $('#ind_id').append($('<option>', {value: item.id, text: item.ind_name}));
                    });
            },
            complete: function(){
                $('.loader-wrapper').hide()
            }
        })
    })
</script>
    <script>
        $("#ind_id").on("change", function () {
            $.ajax({
                method: "GET",
                url: "/get_busi_act_ajax",
                data: { ind_id: $(this).val(), sec_id: $("#sec_id").val() },
                dataType: "html",
                beforeSend: function () {
                    $(".loader-wrapper").show();
                },
                success: function (result) {
                    var res = JSON.parse(result);
                    // console.log(res);
                    $('#bus_id').empty();
                    $('#bus_id').append($('<option>', {value: '', text: 'Select Business'}));
                    if (res.suc > 0 && res.msg.length > 0)
                        $.each(res.msg, function (i, item) {
                            $("#bus_id").append(
                                $("<option>", { value: item.id, text: item.busi_act_name })
                            );
                        });
                },
                complete: function () {
                    $(".loader-wrapper").hide();
                },
            });
        });
    </script>

<%- include('../templates/footer.ejs') %>