<%- include('../../templates/header.ejs') %>
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Add/Edit Topic</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="/topic?flag=<%= enc_dt %>">Topic Dashboard</a></li>
                    <li class="breadcrumb-item">Add/Edit Topic</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
            <div class="card-body">
                <form method="POST" action="/topic_save" class="needs-validation">
                <div class="row g-3 py-3">
                    <div class="col-md-12">
                        <label class="form-label" for="topic_catg_id">Category</label>
                        <select class="form-select" id="topic_catg_id" name="topic_catg_id" required="">
                            <option selected="" value="">Select category</option>
                            <% if(catg_data.msg.length > 0){
                                catg_data.msg.forEach(dt => { 
                                    var selected = '';
                                    if(id > 0) 
                                        if(dt.id == topic_data.msg[0].topic_catg_id) selected = 'selected'; %>
                                    <option value="<%= dt.id %>" <%= selected %>><%= dt.catg_name %></option>
                                <% })
                            } %>
                        </select>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label" for="topic_name">Topic name</label>
                        <input class="form-control" id="topic_name" name="topic_name" type="text" value="<%= id > 0 ? topic_data.msg[0].topic_name : '' %>" required="">
                        <div class="valid-feedback">No Error</div>
                    </div>
                </div>
                <input type="hidden" name="id" value="<%= id > 0 ? id : 0 %>">
                <input type="hidden" name="flag" value="<%= flag ? flag : '' %>">
                <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../templates/footer.ejs') %>