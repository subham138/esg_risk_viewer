<%- include('../../templates/header.ejs') %>
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Topic</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item">Topic</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Zero Configuration  Starts-->
        <div class="col-sm-12">
            <% if(message){ %>
                <script>
                    setTimeout(() => {
                        initiate_sweet_alert('Topic Category', '<%= message.message %>', "<%= message.type != 'danger' ? message.type : 'error' %>")
                    }, 1000);
                </script>
                <!-- <div class="alert alert-<%# message.type %> dark alert-dismissible fade show" role="alert">
                  <i data-feather="clock"></i>
                  <p><%# message.message %></p>
                  <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> -->
            <% } %>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 my-2">
                            <a href="/topic_catg_edit?id=0&flag=<%= enc_dt %>" class="btn btn-pill btn-outline-primary btn-air-primary float-end" data-bs-toggle="tooltip" data-bs-placement="left" title="Add new topic category" data-bs-original-title="Edit">Add New Topic Category</a>
                        </div>
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="display" id="basic-1">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Topic</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(data.msg.length > 0){
                                            let i = 1;
                                        data.msg.forEach(dt => { %>
                                        <tr>
                                            <td><%= i %></td>
                                            <td><%= dt.catg_name %></td>
                                            <td><a href="/topic_catg_edit?id=<%= dt.id %>&flag=<%= enc_dt %>" class="btn btn-pill btn-outline-primary btn-air-primary" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Edit">
                                                <i class="icofont icofont-ui-edit"></i> Edit
                                            </a>
                                            <a href="/topic_catg_del?id=<%= dt.id %>&flag=<%= enc_dt %>" class="btn btn-pill btn-outline-danger btn-air-danger" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="Delete" onclick="return delItem();">
                                                <i class="icofont icofont-ui-delete"></i> Delete
                                            </a>
                                            </td>
                                        </tr>
                                        <% i++; })}else{ %>
                                        <tr>
                                            <td colspan="3">No Data Found</td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Zero Configuration  Ends-->
    </div>
</div>
<script>
    function delItem(){
        if(confirm('Do you want to delete?')){
            return true
        }else{
            return false
        }
    }
</script>
<%- include('../../templates/footer.ejs') %>